{
  "manifest_version": 2,

  "name": "Air.Auth",
  "description": "Leap Motion Powered Keychain for Chrome",
  "icons": { "16": "icon.png",
             "48": "icon48.png",
             "128": "icon128.png"
  },
  "version": "1.0",
  "background": {
      "scripts": [ "background.js" ],
      "persistent": true
   },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Air.Auth"
  },
    "permissions": [
    "cookies",
    "<all_urls>",
    "fileBrowserHandler",
    "idle",
    "notifications",
    "tabs",
    "geolocation",
    "http://airauth.cloudnode.co/*"
  ],
    "content_scripts": [
    {
      "matches": ["http://www.google.com/*"],
      "js": ["assets/js/jquery-1.10.2.min.js", "assets/js/bootstrap.min.js", "assets/js/ejs.js", "assets/js/templates.js" ,"leap-0.6.0-beta2.js", "air-spring.js"]
    }
  ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
