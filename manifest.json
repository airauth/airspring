{
  "manifest_version": 2,

  "name": "Air.Auth",
  "description": "Leap Motion Powered Keychain for Chrome",
  "icons": { "16": "icon.png",
             "48": "icon48.png",
             "128": "icon128.png"
  },
  "version": "1.0",
  "background": {
      "scripts": [ "background.js" ],
      "persistent": true
   },
   "content_scripts": [ {
      "all_frames": false,
      "js": [ "assets/js/contentscript.js" ],
      "matches": [ "http://www.facebook.com/*", "https://www.facebook.com/*", "http://ppcdn.500px.org/*" ],
      "run_at": "document_idle"
   } ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Air.Auth"
  },
    "permissions": [
    "cookies",
    "<all_urls>",
    "fileBrowserHandler",
    "idle",
    "notifications",
    "tabs",
    "geolocation",
    "http://airauth.cloudnode.co/*"
  ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
